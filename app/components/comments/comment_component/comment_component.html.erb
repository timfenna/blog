<% unless @comment.archived? %>
  <div class="mt-3 shadow-lg bg-slate-50 p-5" id="comment_<%= @comment.id %>">
    <div class="flex-row justify-content-between w-full">
      <span id="comment_<%=@comment.id %>">
        <i class="fa fa-user text-slate-500"></i>
        <%= @comment.user.username %>
      </span>
      <span>
        <%= link_to '<i class="fa fa-trash"></i>'.html_safe, [@comment.article, @comment], data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
      </span>
    </div>

    <p class="mt-3">
      <%= @comment.body %>
    </p>

  </div>
<% end %>

<div>
  <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"><%= @article.title %></h1>
  <h2 class="mt-3 text-lg leading-8 text-gray-600">
    Written by <%= @article.user.username %>
  </h2>

  <div class="mt-4 mb-4">
    <%= link_to '<i class="fa fa-pencil"></i> Edit Article'.html_safe, edit_article_path, class: "mt-4 bg-gray-900 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to '<i class="fa fa-trash"></i> Delete Article'.html_safe, article_path(@article), class: "mt-4 bg-gray-900 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded", data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    }%>
  </div>

  <p class="mt-6"><%= @article.body %></p>

  <hr class="mt-6">
</div>
